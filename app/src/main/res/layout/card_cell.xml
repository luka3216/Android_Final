<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:elevation="8dp"
    android:padding="5dp"
    android:paddingBottom="8dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/account_background_amex_green">

        <TextView
            android:id="@+id/cardTypeTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="12dp"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse" />

        <TextView
            android:id="@+id/cardExpireDateTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="69dp"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="81dp"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse" />

        <TextView
            android:id="@+id/cardNumberTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardTypeTextField"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="87dp"
            android:layout_marginLeft="87dp"
            android:layout_marginTop="13dp"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
            tools:text="XXXX XXXX XXXX 1245" />

        <TextView
            android:id="@+id/holderNameTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardTypeTextField"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="73dp"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
            tools:text="GIORGI GIORGADZE" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="321dp"
            android:layout_marginRight="321dp"
            android:text="valid thru"
            android:textAppearance="@style/TextAppearance.AppCompat.Inverse" />

        <ImageView
            android:id="@+id/cardThumbnail"
            android:layout_width="55dp"
            android:layout_height="39dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="91dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            app:srcCompat="@drawable/card_icon_visa_border_single" />

    </RelativeLayout>

</android.support.v7.widget.CardView>